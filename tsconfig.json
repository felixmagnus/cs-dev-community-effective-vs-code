{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"outDir": "build"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
